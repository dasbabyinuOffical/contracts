pragma solidity ^0.8.4;
pragma abicoder v2;

/** @title PancakeSwap Lottery.
 * @notice It is a contract for a lottery system using
 * randomness provided externally.
 */
contract Lottery is ReentrancyGuard, IPancakeSwapLottery, Ownable {
    using SafeERC20 for IERC20;

    address public treasuryAddress;
    uint256 public currentLotteryId;

    uint256 public maxNumberTicketsPerBuyOrClaim = 100;
    uint256 public treasuryFee = 20; // 20%

    IERC20 public cakeToken;
    uint256 public cakeTokenDecimal;
    IERC721 public nftToken;

    enum Status {
        Open,
        Close,
        Claimable
    }

    // lottery status
    Status public status = Status.Claimable;

    // startTime
    uint256 public startTime;

    // endTime
    uint256 public endTime;

    // priceTicket,default 1
    uint256 public priceTicket = 1 ;

    // 5 tickets discount 90%
    uint256 public fiveNftDiscount = 90;

    // 20 tickets discount 80%
    uint256 public TwentyDiscount = 80;

    // 100 tickets discount 70%
    uint256 public hundredNftDiscount = 70;

    // discount,genesis nft discount 90%
    uint256 public nftDiscount = 90;

    // total reward
    uint256 public totalReward;

    // final number
    uint256 public finalNumber;

    // users 
    address[] public users;

    // userTicketsCnt
    mapping(address => uint256) public userTicketsCnt;

    // user ticket number
    mapping(address => uint256[]) public userTickets;

    // user reward
    mapping(address => uint256) public userRewards;

    // match one users share rewards
    uint256 public matchOneShare = 10;

    // match two users share rewards
    uint256 public matchTwoShare = 20;

    // match three users share rewards
    uint256 public matchThreeShare = 70;

    // match one users cnt
    uint256 public matchOneUserCnt;

    // match two users cnt
    uint256 public matchTwoUserCnt;

    // match three users cnt
    uint256 public matchThreeUserCnt;

    modifier notContract() {
        require(!_isContract(msg.sender), "Contract not allowed");
        require(msg.sender == tx.origin, "Proxy contract not allowed");
        _;
    }

    event AdminTokenRecovery(address token, uint256 amount);
    event LotteryClose(uint256 indexed lotteryId, uint256 firstTicketIdNextLottery);
    event LotteryInjection(uint256 indexed lotteryId, uint256 injectedAmount);
    event LotteryOpen(
        uint256 indexed lotteryId,
        uint256 startTime,
        uint256 endTime,
        uint256 priceTicketInCake,
        uint256 firstTicketId,
        uint256 injectedAmount
    );
    event LotteryNumberDrawn(uint256 indexed lotteryId, uint256 finalNumber, uint256 countWinningTickets);
    event NewOperatorAndTreasuryAndInjectorAddresses(address operator, address treasury, address injector);
    event TicketsPurchase(address indexed buyer, uint256 indexed lotteryId, uint256 numberTickets);
    event TicketsClaim(address indexed claimer, uint256 amount, uint256 indexed lotteryId, uint256 numberTickets);

    /**
     * @notice Constructor
     * @dev RandomNumberGenerator must be deployed prior to this contract
     * @param _cakeTokenAddress: address of the CAKE token
     */
    constructor(address _cakeTokenAddress, uint256 _cakeTokenDecimal,address _nftToken) {
        cakeToken = IERC20(_cakeTokenAddress);
        cakeTokenDecimal = _cakeTokenDecimal;
        nftToken = IERC721(_nftToken);
        treasuryAddress = msg.sender;
    }

    /**
     * @notice Buy tickets for the current lottery
     * @param _lotteryId: lotteryId
     * @param _ticketNumbers: array of ticket numbers between 1,000,000 and 1,999,999
     * @dev Callable by users
     */
    function buyTickets(uint256 _lotteryId, uint32[] calldata _ticketNumbers)
        external
        override
        notContract
        nonReentrant
    {
        require(_ticketNumbers.length != 0, "No ticket specified");
        require(_ticketNumbers.length <= maxNumberTicketsPerBuyOrClaim, "Too many tickets");

        require(status == Status.Open, "Lottery is not open");
        require(block.timestamp < endTime, "Lottery is over");

        for (uint256 i = 0; i < _ticketNumbers.length; i++) {
            uint32 thisTicketNumber = _ticketNumbers[i];
            require((thisTicketNumber >= 1000) && (thisTicketNumber <= 1999), "Outside range");
        }

        // Calculate number of CAKE to this contract
        uint256 amountCakeToTransfer = calculateTotalPriceForBulkTickets( _ticketNumbers.length,msg.sender);

        // add to totalReward
        totalReward += amountCakeToTransfer;
        // Transfer cake tokens to this contract
        cakeToken.safeTransferFrom(address(msg.sender), address(this), amountCakeToTransfer);

        // record user tickets
        if (userTickets[msg.sender].length == 0 ) {
            users.push(msg.sender);
        }
        for (uint256 i = 0; i < _ticketNumbers.length; i++) {
            userTickets[msg.sender].push(_ticketNumbers[i]);
            userTicketsCnt[msg.sender] += 1;
        }

        emit TicketsPurchase(msg.sender, _lotteryId, _ticketNumbers.length);
    }

    /**
     * @notice Claim a set of winning tickets for a lottery
     * @param _lotteryId: lottery id
     * @param _ticketIds: array of ticket ids
     * @param _brackets: array of brackets for the ticket ids
     * @dev Callable by users only, not contract!
     */
    function claimTickets(
        uint256 _lotteryId,
        uint256[] calldata _ticketIds,
        uint32[] calldata _brackets
    ) external override notContract nonReentrant {
        require(status == Status.Claimable, "Lottery not claimable");

        // Initializes the rewardInCakeToTransfer
        uint256 rewardInCakeToTransfer = userRewards[msg.sender];
        // Transfer money to msg.sender
        cakeToken.safeTransfer(address(msg.sender), rewardInCakeToTransfer);

        emit TicketsClaim(msg.sender, rewardInCakeToTransfer, _lotteryId, _ticketIds.length);
    }

    /**
     * @notice Close lottery
     * @param _lotteryId: lottery id
     * @dev Callable by operator
     */
    function closeLottery(uint256 _lotteryId) external override onlyOwner nonReentrant {
        require(status == Status.Open, "Lottery not open");
        require(block.timestamp > endTime, "Lottery not over");

        status = Status.Close;

        emit LotteryClose(currentLotteryId, currentLotteryId);
    }

    /**
     * @notice Draw the final number, calculate reward in CAKE per group, and make lottery claimable
     * @param _lotteryId: lottery id
     * @param _autoInjection: reinjects funds into next lottery (vs. withdrawing all)
     * @dev Callable by operator
     */
    function drawFinalNumberAndMakeLotteryClaimable(uint256 _lotteryId, bool _autoInjection)
        external
        override
        onlyOwner
        nonReentrant
    {
        require(status == Status.Close, "Lottery not close");

        status = Status.Claimable;
        finalNumber = _lotteryId;

        // Initializes the amount to withdraw to treasury
        uint256 amountToWithdrawToTreasury = totalReward * treasuryFee / 100;
        totalReward -= amountToWithdrawToTreasury;

        // Transfer CAKE to treasury address
        cakeToken.safeTransfer(treasuryAddress, amountToWithdrawToTreasury);

        uint256 three = finalNumber % 1000;

        uint256 first = three /100;

        uint256 second = three /10 %10;

        uint256 third = three %10;

        // calculate reward for users
        for(uint256 i = 0 ; i < users.length; i++){
            uint256[] memory tickets = userTickets[users[i]];
            // every user tickets
            for (uint256 j= 0 ; j < tickets.length;j++){
                uint256 ticket = tickets[j]%1000;
                if (ticket/100 == first) {
                    matchOneUserCnt += 1 ;
                    if (ticket/10 %10 == second) {
                        matchTwoUserCnt += 1 ;
                        if (ticket%10 == third){
                            matchThreeUserCnt += 1;
                        }
                    }
                }
            }
        }

         // calculate reward for users
        for(uint256 i = 0 ; i < users.length; i++){
            uint256[] memory tickets = userTickets[users[i]];
            // every user tickets
            for (uint256 j= 0 ; j < tickets.length;j++){
                uint256 ticket = tickets[j]%1000;
                if (ticket/100 == first) {
                    userRewards[users[i]] += totalReward * matchOneShare / 100 /matchOneUserCnt;
                    if (ticket/10 %10 == second) {
                        userRewards[users[i]] += totalReward * matchTwoShare / 100 /matchTwoUserCnt;
                        if (ticket%10 == third){
                            userRewards[users[i]] += totalReward * matchThreeShare / 100 /matchThreeUserCnt;
                        }
                    }
                }
            }
        }
    }

    /**
     * @notice Inject funds
     * @param _lotteryId: lottery id
     * @param _amount: amount to inject in CAKE token
     * @dev Callable by owner or injector address
     */
    function injectFunds(uint256 _lotteryId, uint256 _amount) external override onlyOwner {
        require(status == Status.Open, "Lottery not open");

        totalReward += _amount;
        cakeToken.safeTransferFrom(address(msg.sender), address(this), _amount);

        emit LotteryInjection(_lotteryId, _amount);
    }

    /**
     * @notice Start the lottery
     * @dev Callable by operator
     * @param _endTime: endTime of the lottery
     * @param _priceTicketInCake: price of a ticket in CAKE
     * @param _discountDivisor: the divisor to calculate the discount magnitude for bulks
     * @param _rewardsBreakdown: breakdown of rewards per bracket (must sum to 10,000)
     * @param _treasuryFee: treasury fee (10,000 = 100%, 100 = 1%)
     */
    function startLottery(
        uint256 _endTime,
        uint256 _priceTicketInCake,
        uint256 _discountDivisor,
        uint256[6] calldata _rewardsBreakdown,
        uint256 _treasuryFee
    ) external override onlyOwner {
        require( (status == Status.Claimable), "Not time to start lottery");
        require(_endTime > block.timestamp,"endTime must bigger than current time");

        //initialize all data
        currentLotteryId += 1;
        // status to open
        status = Status.Open ;

        // startTime
        startTime = block.timestamp;

        // endTime
        endTime = _endTime;

        // priceTicket
        priceTicket = _priceTicketInCake ;

        // treasure fee
        treasuryFee = _treasuryFee;
        
        // 5 tickets discount 90%
        fiveNftDiscount = _rewardsBreakdown[0];

        // 20 tickets discount 80%
        TwentyDiscount =  _rewardsBreakdown[1];

        // 100 tickets discount 70%
        hundredNftDiscount = _rewardsBreakdown[2];

        // match one users share rewards
        matchOneShare = _rewardsBreakdown[3];

        // match two users share rewards
        matchTwoShare = _rewardsBreakdown[4];

        // match three users share rewards
        matchThreeShare = _rewardsBreakdown[5];

        // match one users cnt
        matchOneUserCnt = 0;

        // match two users cnt
        matchTwoUserCnt = 0 ;

        // match three users cnt
        matchThreeUserCnt = 0 ;

        // final number to zero
        finalNumber = 0 ;

        // reset last lottery reward data
        for (uint256 i = 0; i < users.length; i++){
            delete userTickets[users[i]];
            delete userRewards[users[i]];
            delete userTicketsCnt[users[i]];
        }
        delete users;
    }

    /**
     * @notice It allows the admin to recover wrong tokens sent to the contract
     * @param _tokenAddress: the address of the token to withdraw
     * @param _tokenAmount: the number of token amount to withdraw
     * @dev Only callable by owner.
     */
    function recoverWrongTokens(address _tokenAddress, uint256 _tokenAmount) external onlyOwner {
        IERC20(_tokenAddress).safeTransfer(address(msg.sender), _tokenAmount);

        emit AdminTokenRecovery(_tokenAddress, _tokenAmount);
    }

    /**
     * @notice Set max number of tickets
     * @dev Only callable by owner
     */
    function setMaxNumberTicketsPerBuy(uint256 _maxNumberTicketsPerBuy) external onlyOwner {
        require(_maxNumberTicketsPerBuy != 0, "Must be > 0");
        maxNumberTicketsPerBuyOrClaim = _maxNumberTicketsPerBuy;
    }

    /**
     * @notice Set nft discount
     * @dev Only callable by owner
     */
    function setNftDiscount(uint256 _nftDiscount) external onlyOwner {
        nftDiscount = _nftDiscount;
    }

    /**
     * @notice View current lottery id
     */
    function viewCurrentLotteryId() external view override returns (uint256) {
        return currentLotteryId;
    }

    /**
     * @notice Calculate final price for bulk of tickets
     * @param _numberTickets: number of tickets purchased
     */
    function calculateTotalPriceForBulkTickets(uint256 _numberTickets,address _sender) public view returns (uint256) {
        uint256 total = _numberTickets*priceTicket * (10 ** cakeTokenDecimal);

        // nft discount
        if (nftToken.balanceOf(_sender) >= 1 ){
            total = total*nftDiscount/100;
        }

        // 100 discount
        if (_numberTickets >= 100){
            return total*hundredNftDiscount/100;
        }

        // 20 discount
        if (_numberTickets >= 20){
            return total * TwentyDiscount/100;
        }

        // 5 discount
        if (_numberTickets >= 5){
            return total * fiveNftDiscount/100;
        }

        return total;
    }

    /**
     * @notice Check if an address is a contract
     */
    function _isContract(address _addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(_addr)
        }
        return size > 0;
    }
